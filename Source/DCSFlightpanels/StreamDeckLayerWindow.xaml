<Window x:Class="DCSFlightpanels.StreamDeckLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCSFlightpanels"
        mc:Ignorable="d"
        Loaded="StreamDeckLayerWindow_OnLoaded"
        Title="Stream Deck Layer" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10,10,0,0">
            <Label Content="Layer Name"></Label>
            <TextBox Name="TextBoxLayerName" KeyUp="TextBoxLayerName_OnKeyUp"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,0">
                <Button Name="ButtonCancel" Content="Cancel" Width="50" Click="ButtonCancel_OnClick" Margin="0,0,10,0"></Button>
                <Button Name="ButtonOk" Content="Ok" Width="50" Click="ButtonOk_OnClick"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
